{
	"name": "lsp--sample",
	"description": "A language server for CheezLang",
	"author": "Nimaoth",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "Nimaoth",
	"repository": {
		"type": "git",
		"url": "https://github.com/Nimaoth/CheezLang"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:cheezlang"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "cheezlang",
				"extensions": [
					".che"
				],
				"aliases": [
					"cheez",
					"Cheez",
					"CheezLang"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "CheezLang Language Server Configuration",
			"properties": {
				"cheezls.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"cheezls.logFilePath": {
					"scope": "resource",
					"type": "string",
					"default": null,
					"description": "Path to log file of cheez language server."
				},
				"cheezls.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2"
	}
}
