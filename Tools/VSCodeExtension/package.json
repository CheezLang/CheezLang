{
  "name": "cheez",
  "description": "A language server for CheezLang",
  "author": "Nimaoth",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Nimaoth",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nimaoth/CheezLang"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cheez",
    "workspaceContains:**/*.che"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "reload_language_server",
        "title": "Reset Cheez Language Server"
      }
    ],
    "languages": [
      {
        "id": "cheezlang",
        "extensions": [
          ".che"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cheezlang",
        "scopeName": "source.cheezlang",
        "path": "./syntaxes/cheezlang.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Cheez Configuration",
      "properties": {
        "cheez.languageServerPath": {
          "scope": "resource",
          "type": "string",
          "default": null,
          "description": "Path to cheez language server."
        },
        "cheez.languageServerPort": {
          "scope": "resource",
          "type": "number",
          "default": 5007,
          "description": "Port of cheez language server."
        },
        "cheez.logFilePath": {
          "scope": "resource",
          "type": "string",
          "default": null,
          "description": "Path to log file of cheez language server."
        },
        "cheez.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VSCode and the language server."
        },
        "cheez.use_std_io": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Communicate with language server using standard in/out"
        }
      }
    },
    "debuggers": [
      {
        "type": "cheez",
        "label": "Cheez",
        "program": "D:/dev/CheezLang/gen/cheezdb.exe",
        "languages": [
          "cheezlang"
        ],
        "initialConfigurations": [
          {
            "type": "cheez",
            "request": "launch",
            "name": "TODO",
            "program": "${workspaceFolder}/TODO"
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "cheezlang"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "mocha": "^6.2.2",
    "@types/node": "^12.12.0",
    "eslint": "^6.4.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^3.8.3",
    "@types/vscode": "1.43.0",
    "vscode-test": "^1.3.0"
  }
}
