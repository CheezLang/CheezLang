// https://projecteuler.net/problem=2

#test_expect_output("4613732")

#load("std:io/io")

Main :: () {
    a := 0
    b := 1
    sum := 0

    while true {
        current := a + b
        a = b
        b = current

        if current > 4000000 then break

        if current % 2 == 0 {
            sum += current
        }
    }

    println(sum)
}