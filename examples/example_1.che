fn Test(start: T) -> $T {
    let arr: List(T)
    arr.data = AllocateArray(5)
    arr.data[0] = start + 1
    arr.data[1] = start + 2
    arr.data[2] = start + 3
    arr.data[3] = start + 4
    arr.data[4] = start + 5
    
    let args: any[] = AllocateArray(3)

    args[0] = @sizeof(T) * 8
    let sum: T = 0
    let i = 0
    while i < 5 {
        let val = arr.data[i]
        sum = sum + val
        args[1] = (int)i
        args[2] = (int)val

        Printlnfn("i{i32} arr[{i32}] = {i32}", args)
        i = i + 1
    }

    FreeArray(args)

    return sum
}

struct List(T: type) {
    data: T[]
}
