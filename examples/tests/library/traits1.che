#test_expect_output("5
hello
true")

C :: import std.c
import std.alloca

Printable :: trait {
    print :: (ref Self);
}

impl Printable for int {
    print :: (ref Self) {
        C.printf("%lld", self)
    }
}

impl Printable for bool {
    print :: (ref Self) {
        C.printf("%s", if self {"true"c} else {"false"c})
    }
}

impl Printable for string {
    print :: (ref Self) {
        C.printf("%.*s", self.bytes.length, self.bytes.data)
    }
}

println :: (p: &Printable) {
    p.print()
    C.puts("")
}

Main :: () {
    five := 5
    hello := "hello"
    tru := true
    println(&five)
    println(&hello)
    println(&tru)
}
