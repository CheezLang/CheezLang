#load("std:preload")

fn c_printf(format: c_string) #varargs #linkname("printf");

Vector :: struct(T: type) #copy {
    x: T
    y: T
}

impl(T: type) Vector[T] {
    fn add(ref Self, other: Vector[T]) -> ref Vector[T] {
        x += other.x
        y += other.y

        return self
    }

    fn sub(a: Vector[T], b: Vector[T]) -> Vector[T] {
        return Vector[T](
            a.x - b.x
            a.y - b.y
        )
    }
}

Vec3  :: Vector[double]
Vec3f :: Vector[float]
Vec3i :: Vector[int]

fn Main() {
    a := Vec3(1, 2)
    b := Vec3(3, 4)
    
    c_printf("%f, %f`n", a.x, a.y)
    c_printf("%f, %f`n", b.x, b.y)

    c := Vec3.sub(a, b)
    a.add(b).add(Vec3(5, 5))

    c_printf("%f, %f`n", a.x, a.y)
    c_printf("%f, %f`n", b.x, b.y)
    c_printf("%f, %f`n", c.x, c.y)
}