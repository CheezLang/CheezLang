io :: import std.io

Main :: () {
    test1(5)
    test2(6)
    test3(4)
    test4(10)
    test5(15)
}

test1 :: (n: int) {
    sum := 0
    sum_index := 0
    for 0..n {
        sum += it
        sum_index += it_index
    }
    io.printfln("{}, {}", (sum, sum_index))
}

test2 :: (n: int) {
    sum := 0
    sum_index := 0
    for i, k: 0..n {
        sum += i
        sum_index += k
    }
    io.printfln("{}, {}", (sum, sum_index))
}

test3 :: (n: int) {
    sum := 0
    for i : 0..n #label a {
        for k : i..n #label b {
            if k % 2 == 0 then continue a
            sum += k
        }
    }
    io.println(sum)
}

test4 :: (n: int) {
    while a := 0, true, a = a + 1 {
        if a == n {
            break
        }

        io.print(a)
    }
    io.println("")
}

test5 :: (n: int) {
    while a := 0, a < n, a = a + 1 {
        io.print(a)
    }
    io.println("")
}

