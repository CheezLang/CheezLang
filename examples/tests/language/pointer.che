#test_expect_output("789")
#test_expect_output("789")
#test_expect_output("5, 9")
#test_expect_output("9, 5")

C :: import std.c

swap :: (pa: ^int, pb: ^int) {
    a := <<pa
    b := <<pb
    (<<pa, <<pb) = (b, a)
}

Main :: () {
    {
        a := 123
        pa := ^a

        C.printf("%d`n", a)
        C.printf("%d`n", <<pa)

        a = 456

        C.printf("%d`n", a)
        C.printf("%d`n", <<pa)

        <<pa = 789

        C.printf("%d`n", a)
        C.printf("%d`n", <<pa)
    }

    {
        a := 5
        b := 9
        C.printf("%d, %d`n", a, b)
        swap(^a, ^b)
        C.printf("%d, %d`n", a, b)
    }
}