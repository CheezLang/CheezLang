C :: import std.c

Main :: () {
    a := Some(1)

    inc1(a)
    print_a(a)
    inc2(a)
    print_a(a)
    inc3(a)
    print_a(a)
    inc4(a)
    print_a(a)
}

print_a :: (a: &Option[int]) {
    match a {
        Some($a) -> {
            C.printf("%lld`n", a)
        }
        None -> {
            C.puts("None")
        }
    }
}

get_ref :: (a: &Option[int]) -> &Option[int] {
    C.puts("get_ref")
    return a
}

inc1 :: (a: &Option[int]) {
    match get_ref(a) {
        Some($v) -> {
            v += 1
        }
    }

}

inc2 :: (a: &Option[int]) {
    a_ref := get_ref(a)
    match *^a_ref {
        Some($v) -> {
            v += 2
        }
    }
}

inc3 :: (a: Option[int]) {
    match &a {
        Some($v) -> {
            v += 4
        }
    }
}

inc4 :: (a: Option[int]) {
    match Option[int].Some(1) {
        Some($v) -> {
            v += 8
        }
    }
}

inc5 :: (a: Option[int]) {
    match Option[int].Some(1) {
        Some($v) -> {
            v += 16
        }
    }
}