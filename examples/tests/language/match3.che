#load("std:c")



get_ref :: (a: ref Option[int]) -> ref Option[int] {
    c_puts("get_ref")
    return a
}

inc1 :: (a: ref Option[int]) {
    match get_ref(a) {
        Some(ref $v) -> {
            v += 1
        }
    }

}

inc2 :: (a: ref Option[int]) {
    match get_ref(a) {
        Some($v) -> {
            v += 2
        }
    }
}

inc3 :: (a: Option[int]) {
    match a {
        Some(ref $v) -> {
            v += 4
        }
    }
}

inc4 :: (a: Option[int]) {
    match Option[int].Some(1) {
        Some(ref $v) -> {
            v += 8
        }
    }
}

inc5 :: (a: Option[int]) {
    match Option[int].Some(1) {
        Some($v) -> {
            v += 16
        }
    }
}

print_a :: (a: ref Option[int]) {
    match a {
        Some($a) -> {
            c_printf("%lld`n", a)
        }
        None -> {
            c_puts("None")
        }
    }
}

Main :: () {
    a := Some(1)

    inc1(a)
    print_a(a)
    inc2(a)
    print_a(a)
    inc3(a)
    print_a(a)
    inc4(a)
    print_a(a)
}