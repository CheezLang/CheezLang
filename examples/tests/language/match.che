io :: import std.io
use import std.mem.allocator

Main :: () {
    test1()

    io.println("")
    test2()
}

test2 :: () {
    x := 1
    match x {
        0 -> io.println("zero")
        1 -> io.println("one")
        $x if x % 2 == 0 -> io.printf("even {}`n", x)
        $z -> io.println(z)
    }
    
    x = 2
    match x {
        0 -> io.println("zero")
        1 -> io.println("one")
        $x if x % 2 == 0 -> io.printf("even {}`n", x)
        $z -> io.println(z)
    }
    
    x = 3
    match x {
        0 -> io.println("zero")
        1 -> io.println("one")
        $x if x % 2 == 0 -> io.printf("even {}`n", x)
        $z -> io.println(z)
    }
}

test1 :: () {
    str := "hello world, this is a sentence in lower case letters"

    newStr := alloc_n(char, cast str.length)


    if str[0] >= 'a' and str[0] <= 'z' {
        newStr[0] = str[0] - 'a' + 'A'
    }

    for i : 1..str.length {
        c := str[i]
        c = match (str[i - 1], str[i]) {
            (' ', $x) if x >= 'a' and x <= 'z' -> x - 'a' + 'A'
            $x -> x[1]
        }

        newStr[i] = c
    }

    io.println(str)
    io.println(newStr)
}