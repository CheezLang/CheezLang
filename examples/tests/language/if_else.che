#load("std:preload")

// required for printing
c_printf :: (format: c_string) #varargs #linkname("printf");

Main :: () {
    test(true, true)
    test(false, true)
    test(true, false)
    test(false, false)
    
    test2(true, true)
    test2(false, true)
    test2(true, false)
    test2(false, false)

    test3(true)
    test3(false)

    if (ok, str) := test4(false), ok {
        c_printf("%s`n", str)
    } else {
        c_printf("%s`n", "error"c)
    }

    if res := test4(true), res.ok {
        c_printf("%s`n", res.value)
    } else {
        c_printf("%s`n", "error"c)
    }
}

bool_to_string :: (b: bool) -> c_string {
    return if b {"true"} else {"false"}
}

test :: (b1: bool, b2: bool) {
    if b1 {
        if b2 {
            c_printf("true, true`n")
        } else {
            c_printf("true, false`n")
        }
    } else {
        if b2 {
            c_printf("false, true`n")
        } else {
            c_printf("false, false`n")
        }
    }
}

test2 :: (b1: bool, b2: bool) {
    num := if b1 {
        if b2 then 1 else 2
    } else {
        if b2 then
            3
        else
            4
    }

    c_printf("%d`n", num)
}

test3 :: (b: bool) {
    if b {
        c_printf("true`n")
        return
    }

    c_printf("false`n")
}

test4 :: (b: bool) -> (ok: bool, value: c_string) {
    ok = b
    value = if ok {"yey"} else {null}
}
