use import std.mem.allocator


Box :: struct(T: type) {
    _value: &T
}

impl(T: type) Box[T] {
    create :: (v: T = default) -> Box[T] {
        p := alloc(T)
        <<p = v
        return Box[T](p)
    }

    value :: (ref Self) -> ref T {
        return <<_value
    }
}

impl(T: type) Drop for Box[T] {
    drop :: (ref Self) {
        free(_value)
        _value = null
    }
}